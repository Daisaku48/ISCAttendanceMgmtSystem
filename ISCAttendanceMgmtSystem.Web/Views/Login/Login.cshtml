@using ISCAttendanceMgmtSystem.COM.Models
@model LoginViewModelSd
@{
    ViewBag.Title = "LOGIN";
}

@Styles.Render("~/Content/css/login")

<div class="row">
    <div class="col-xs-12">
        <div class="">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="change_form_top">
                        <h1>LOGIN</h1>
                        <p>ユーザーID、パスワードをご入力の上、</p>
                        <p>「LOGIN」ボタンをクリックしてください。</p>
                    </div>

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(m => m.Id, new { @class = "form-control InputText", @placeholder = "ユーザID" })
                    @Html.ValidationMessageFor(m => m.Id, "", new { @class = "text-danger" })

                    @Html.PasswordFor(m => m.Password, new { @class = "form-control InputText", @placeholder = "パスワード" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    <input type="submit" value="LOGIN" class="btn-default" />
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
